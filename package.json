{
  "name": "electron-audio-converter",
  "version": "1.0.0",
  "description": "Conversor de Ã¡udio multi-formato baseado em Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": ["audio", "converter", "electron", "ffmpeg", "mp3", "wav"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2"
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.audioconverter.app",
    "productName": "Audio Converter",
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"],
      "icon": "src/assets/icons/icon.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "src/assets/icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "src/assets/icons/app-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
